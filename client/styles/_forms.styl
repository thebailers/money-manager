.form-group
  label, input, .hint
    display block
    margin-bottom 5px

  label
    color #9c9c9c
    margin-top 25px

  input
    border 1px solid $stroke
    color #676767
    font-size 20px
    padding 20px 10px
    width 100%

    &[type='text'], &[type='password']
      background #fff
      border-radius 3px


    &[type='submit']
      background #32cd32
      border none
      border-radius 4px
      color #fff
      display inline-block

  .hint
    color $orange
