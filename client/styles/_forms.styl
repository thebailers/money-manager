.form-group
  label, input, .hint
    display block
    margin-bottom 5px

  label
    margin-top 25px

  input
    padding 10px
    width 100%

    &[type='text'], &[type='password']
      background #fff
      border none
      border-radius 3px
      color #333


    &[type='submit']
      background #32cd32
      border none
      border-radius 4px
      color #fff
      display inline-block

  .hint
    color $orange
