$orange = orangered
$green = limegreen
$radius-button = 3px


@import url(https://fonts.googleapis.com/css?family=Roboto:400,400italic,500,500italic,700italic,700,300,300italic)
@import '_normalise.styl'
@import '_helpers.styl'
@import '_header.styl'
@import '_nav.styl'
@import '_datepicker.styl'
@import '_login.styl'
@import '_forms.styl'
@import 'modules/_buttons.styl'
@import 'modules/_notifications.styl'

body
  color #333
  // font-family 'Roboto', Helvetica
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  margin 0
  padding 0


article.articlebody
	background #f4f4f4
	padding 10px
	position relative
	z-index 1

	section

		h2
			.actionlink
				background #e6e6e6
				border-radius 4px
				color #666
				display inline-block
				font-size 12px
				font-weight normal
				padding 5px 10px
				text-align center
				text-decoration none


		table
			border 1px solid snow
			border-spacing 10px
			width 100%

			thead
				th
					border-bottom 2px solid silver
					color silver
					font-weight normal
					text-align left

					&.activefilter
						color orangered
						border-bottom 2px solid $orange

			th, td
				font-size 14px

			th
				padding-bottom 10px

			&.financials
				background #fff

				td
					&:first-child
						width 50%
					&:nth-child(2), &:nth-child(3), &:nth-child(4)
						width 14%
					&:nth-child(5), &:nth-child(6)
						width 4%

					.button
						background #c9c9c9
						border-radius 4px
						color white
						display inline-block
						padding 5px 10px
						text-align center
						text-decoration none

						&:hover
							background limegreen

					a
						cursor pointer

				th
          cursor pointer

					&.actions
						border none
						text-align center

				&.-transactions
					td
						&:first-child
							width 64%
						&:nth-child(2), &:nth-child(3)
							width 14%
						&:nth-child(4), &:nth-child(5)
							width 4%

			button
				border none



		&.sumtotal
			margin-top: 75px

			.total, .remaining, .days
				display inline-block
				position relative
				height 0
				margin-left 2%
				padding-bottom 15%
				width 15%

				&:first-child
					margin-left 0

				span
					display block



		form
			label
				display block
				margin 15px 0 5px

			input
				border-radius $radius-button
				border 1px solid #e0e0e0
				padding 5px
				width 100%

			button
				background $orange
				border none
				border-radius $radius-button
				color white
				margin-top 15px
				padding 5px 15px

			.text-help
				color $orange
				font-size 13px
				margin-top 5px





	&:first-child
		margin-top 0 !important
