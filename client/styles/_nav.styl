nav
	border-bottom 1px solid $stroke
	margin 0 auto 50px
	max-width 1150px
	padding 25px 15px

	.subnav
		margin 0
		overflow hidden
		padding 0

		li
			border-radius $radius-button
			float left
			list-style none
			margin-right 15px

			&.active
				background $lightblue
				border none

				&:hover
					background $lightblue

				a
					color white

			&:hover
				background GhostWhite


			a
				color $lightgreytext
				display inline-block
				font-size 18px
				height 40px
				line-height 40px
				min-width 150px
				outline none
				text-align center
				text-decoration none
