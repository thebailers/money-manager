.alert
  border-style solid
  border-width 5px 0 0
  padding: 15px 20px 20px
  position relative
  transition all 3s

  &.error
    background lighten($orange, 70%)
    border-color $orange
    color darken($orange, 50%)

    .close
      background lighten($orange, 50%)
      border-color $orange
      color darken($orange, 20%)

    a
      color darken($orange, 50%)
      text-decoration underline

  &.success
    background lighten($green, 70%)
    border-color $green
    color darken($green, 50%)

    .close
      background lighten($green, 50%)
      border-color $green
      color darken($green, 20%)

  &.hide
    opacity 0

  .close
    border-radius 5px
    border-style solid
    border-width 1px
    position absolute
    right 10px
    top 50%
    transform translateY(-50%)
