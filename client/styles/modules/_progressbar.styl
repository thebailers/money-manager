$barheight = 10px
$annotations = 20px

.progress-bar
  background Gainsboro
  height $barheight
  margin-bottom 25px
  position relative

  &.annotated
    margin 25px 0

  .progress
    background $green
    display inline-block
    height $barheight
    position absolute
    top 0
    left 0

  .current, .limit
    border-color #484848
    border-style solid
    color $lightgrey
    height ($annotations + $barheight + 5px)

  .current
    border-width 0 0 0 2px
    padding-left 5px
    position absolute
    top -($annotations + 5)

  .limit
    border-width 0 2px 0 0
    display flex
    flex-direction column
    padding-right 5px
    float right

    .anchor
      margin-top: auto;
