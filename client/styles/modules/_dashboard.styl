.dashboard-archive-panel
  margin-bottom 50px


  .title
    font-size: 30px
    margin-bottom 15px

  .custom-date-range
    .date-range-toggle
      display block
      outline none
      position relative

    &.is-active
      background lighten(lightgrey, 90%)

      .date-range-toggle
        &:after
          color grey
          content "\00D7"
          font-size: 24px
          position absolute
          right 0

  a
    color $orange
