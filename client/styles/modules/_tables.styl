.financials
  td
    border-top 1px solid $stroke
    font-size 16px
    font-weight 600
    padding 20px

    &:first-child
      width 50%

    &:nth-child(4), &:nth-child(5)
      width 4%

  th
    color silver
    font-weight normal
    text-align left
    padding 20px

    &.activefilter
      color $orange
      border-bottom 2px solid $orange
